{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": false,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
